<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="com.example.todayCody.LoginDAO">


	<select id="getUserId" resultType="string">
		select user_id from todayCody.user limit 1;
	</select>

	<select id="duplIdCnt" parameterType="LoginDTO" resultType="int">
		select count(*) from todayCody.user where user_id = #{user_id};
	</select>

	

	<insert id="upUserInfoCnt" parameterType="LoginDTO">
		insert into todayCody.user(
			user_id
			,pwd			
			,u_name
			,u_nickname
			,email
			,u_birth
		)
		values
		(
			#{user_id}
			,#{pwd}			
			,#{u_name}
			,#{u_nickname}
			,#{email}
			,#{u_birth}
		)
	</insert>

</mapper>
